extends ../_layouts/wrapper
block content
  h1 Todos
    a.waves-effect.waves-light.btn.addListBtn
      i.material-icons.right add
      | Add List

  .input-field.col.s6
    input#first_name2.validate.listTitle(value='Alvin', type='text')
    label.active(for='first_name2') First Name
  .row
    .col.s6.push-m3
      ul.tabs.z-depth-1
        li.tab.col
          a(href='#test1') Test 1

      ul.collection.with-header
        li.collection-header
          h4 First Names
        li.collection-item
          div
            span.content
              | Alvin
            span.secondary-content
              span.done.action
                i.material-icons check
              span.edit.action
                i.material-icons.blue-text.text-lighten-1 edit
              span.remove.action
                i.material-icons.red-text.text-lighten-1 clear
